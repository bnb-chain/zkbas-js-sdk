{
  "baseUrl": ".",
  "lib": ["dom", "esnext", "es6"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "emitDeclarationOnly": false,
    "allowUmdGlobalAccess": true,
    "allowJs": true
  },
  "include": [
    "./src",
    "./types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}